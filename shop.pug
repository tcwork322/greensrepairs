extends src/templates/layout.pug

block variables
  - var pageTitle = 'Shop Electric Bikes & Surrons - Greens Repairs Ltd'
  - var metaDescription = 'Browse premium electric bikes and Surron electric dirt bikes. Surron Light Bee, Ultra Bee, Storm Bee and top e-bike brands. Manchester.'
  - var ogTitle = 'Shop Electric Bikes & Surrons - Greens Repairs Ltd'
  - var ogDescription = 'Premium Surron electric dirt bikes and e-bikes, new and serviced, ready to ride.'
  - var ogImage = '/images/bikes/bike-01.jpg'

block content
  //- Hero Section
  section.hero.hero-shop
    .hero-overlay
    .hero-container
      .hero-content
        .hero-badge
          i.fas.fa-bicycle
          span Browse Our Collection
        h1.hero-title
          | Premium Electric Bikes
          br
          span.highlight & Surrons
        p.hero-description
          | Surron electric dirt bikes and top-brand e-bikes. 
          | New and expertly serviced, ready to ride.
        .hero-buttons
          a.btn.btn-hero-primary(href='#bikes')
            span Browse Bikes
            i.fas.fa-arrow-down
    .hero-scroll
      i.fas.fa-chevron-down

  //- Bikes Grid
  section.bikes-section#bikes
    .container
      .bikes-grid#bikesGrid
        //- Bikes will be loaded here by JavaScript

      //- Pagination
      .pagination#pagination
        //- Pagination will be loaded here by JavaScript

  include src/components/footer.pug

block append scripts
  script(type='module' src='/js/shop.js')
